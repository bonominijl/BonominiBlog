---
import Layout from '../layouts/Layout.astro';
---

<Layout 
  title="Contact Us | BonominiBlog" 
  description="Get in touch with us for print orders, questions, or collaboration opportunities."
>
  <section class="py-16 md:py-24 bg-base-50 dark:bg-base-900">
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="max-w-3xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold text-base-900 dark:text-white mb-6">Contact Us</h1>
        <p class="text-xl text-base-700 dark:text-base-300 mb-12">
          Get in touch with us for print orders, questions, or collaboration opportunities.
        </p>
        
        <!-- Contact Form -->
        <form class="bg-white dark:bg-base-800 p-8 shadow-sm border border-base-200 dark:border-base-700">
          <div class="grid grid-cols-1 gap-y-6 sm:grid-cols-2 sm:gap-x-6">
            <div class="sm:col-span-2">
              <label for="name" class="block text-sm font-medium text-base-900 dark:text-base-200 mb-1">Name</label>
              <input 
                type="text" 
                name="name" 
                id="name" 
                class="w-full border-base-300 dark:border-base-600 rounded-none focus:ring-accent-500 focus:border-accent-500 bg-base-50 dark:bg-base-700 dark:text-white"
              />
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-base-900 dark:text-base-200 mb-1">Email</label>
              <input 
                type="email" 
                name="email" 
                id="email" 
                class="w-full border-base-300 dark:border-base-600 rounded-none focus:ring-accent-500 focus:border-accent-500 bg-base-50 dark:bg-base-700 dark:text-white"
              />
            </div>
            
            <div>
              <label for="phone" class="block text-sm font-medium text-base-900 dark:text-base-200 mb-1">Phone (optional)</label>
              <input 
                type="tel" 
                name="phone" 
                id="phone" 
                class="w-full border-base-300 dark:border-base-600 rounded-none focus:ring-accent-500 focus:border-accent-500 bg-base-50 dark:bg-base-700 dark:text-white"
              />
            </div>
            
            <div class="sm:col-span-2">
              <label for="subject" class="block text-sm font-medium text-base-900 dark:text-base-200 mb-1">Subject</label>
              <select 
                id="subject" 
                name="subject" 
                class="w-full border-base-300 dark:border-base-600 rounded-none focus:ring-accent-500 focus:border-accent-500 bg-base-50 dark:bg-base-700 dark:text-white"
              >
                <option value="print-order">Print Order</option>
                <option value="question">General Question</option>
                <option value="collaboration">Collaboration</option>
                <option value="other">Other</option>
              </select>
            </div>
            
            <div class="sm:col-span-2">
              <label for="message" class="block text-sm font-medium text-base-900 dark:text-base-200 mb-1">Message</label>
              <textarea 
                id="message" 
                name="message" 
                rows="6" 
                class="w-full border-base-300 dark:border-base-600 rounded-none focus:ring-accent-500 focus:border-accent-500 bg-base-50 dark:bg-base-700 dark:text-white"
              ></textarea>
            </div>
            
            <div class="sm:col-span-2">
              <div class="flex items-center">
                <input 
                  id="newsletter" 
                  name="newsletter" 
                  type="checkbox"
                  class="h-4 w-4 text-accent-600 focus:ring-accent-500 border-base-300 dark:border-base-600 rounded"
                />
                <label for="newsletter" class="ml-2 block text-sm text-base-700 dark:text-base-300">
                  Subscribe to our newsletter for updates on new photos and print offerings
                </label>
              </div>
            </div>
            
            <div class="sm:col-span-2 mt-4">
              <button 
                type="submit"
                class="w-full bg-accent-500 hover:bg-accent-600 dark:bg-accent-600 dark:hover:bg-accent-700 text-white py-3 px-4 font-medium transition-colors"
              >
                Send Message
              </button>
            </div>
          </div>
        </form>
        
        <!-- Contact Info -->
        <div class="mt-12 grid grid-cols-1 gap-8 sm:grid-cols-3">
          <div class="text-center bg-white dark:bg-base-800 p-6 border border-base-200 dark:border-base-700 shadow-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mx-auto text-accent-500 dark:text-accent-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <h3 class="text-lg font-medium text-base-900 dark:text-white">Email</h3>
            <p class="mt-2 text-base-600 dark:text-base-300">hello@bonominiblog.com</p>
          </div>
          
          <div class="text-center bg-white dark:bg-base-800 p-6 border border-base-200 dark:border-base-700 shadow-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mx-auto text-accent-500 dark:text-accent-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <h3 class="text-lg font-medium text-base-900 dark:text-white">Phone</h3>
            <p class="mt-2 text-base-600 dark:text-base-300">(555) 123-4567</p>
          </div>
          
          <div class="text-center bg-white dark:bg-base-800 p-6 border border-base-200 dark:border-base-700 shadow-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mx-auto text-accent-500 dark:text-accent-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <h3 class="text-lg font-medium text-base-900 dark:text-white">Location</h3>
            <p class="mt-2 text-base-600 dark:text-base-300">San Francisco, CA</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Simple form validation
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.querySelector('form');
    
    if (form) {
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        
        // Simulate form submission
        const submitButton = form.querySelector('button[type="submit"]');
        const originalText = submitButton.textContent;
        
        submitButton.disabled = true;
        submitButton.textContent = 'Sending...';
        
        // Simulate API call with timeout
        setTimeout(() => {
          form.innerHTML = `
            <div class="text-center py-12">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-accent-500 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7" />
              </svg>
              <h3 class="text-2xl font-bold text-base-900 mb-2">Thank You!</h3>
              <p class="text-lg text-base-700">Your message has been sent. We'll get back to you soon.</p>
            </div>
          `;
        }, 1500);
      });
    }
  });
</script>
