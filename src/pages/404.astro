---
import Layout from '../layouts/Layout.astro';

const basePath = import.meta.env.BASE_URL || '/';
---

<Layout 
  title="Page Not Found | BonominiBlog" 
  description="The page you're looking for doesn't exist or has been moved."
>
  <section class="py-24 bg-base-50 dark:bg-base-900 min-h-screen flex items-center">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto text-center">
        <div class="inline-flex items-center justify-center size-24 bg-base-100 dark:bg-base-800 mb-8 text-4xl font-bold text-accent-500 dark:text-accent-400">
          404
        </div>
        <h1 class="text-4xl md:text-5xl font-bold text-base-900 dark:text-white mb-6">Page Not Found</h1>
        <p class="text-xl text-base-700 dark:text-base-300 mb-10">
          The page you're looking for doesn't exist or has been moved.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href={basePath} 
            class="px-8 py-3 bg-accent-500 text-white hover:bg-accent-600 dark:bg-accent-600 dark:hover:bg-accent-700 transition-colors font-medium"
          >
            Back to Home
          </a>
          <a 
            href={`${basePath}gallery`} 
            class="px-8 py-3 bg-base-200 dark:bg-base-700 text-base-700 dark:text-base-200 hover:bg-base-300 dark:hover:bg-base-600 transition-colors font-medium"
          >
            Visit Gallery
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }
  
  .size-24 {
    width: 6rem;
    height: 6rem;
    animation: pulse 3s infinite ease-in-out;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>
