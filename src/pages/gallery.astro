---
import Gallery from '../components/Gallery.astro';
import Layout from '../layouts/Layout.astro';
const title = 'Gallery';
---

<Layout>
  <main class="container">
    <h1 class="page-title">{title}</h1>
    <Gallery />
  </main>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }
  
  .page-title {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    text-align: center;
    color: #111827;
  }
</style>
