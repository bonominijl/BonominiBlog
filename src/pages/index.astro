---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
const title = 'Josh Bonomini - Personal Portfolio';

const galleryItems = (await getCollection('gallery')).slice(0, 3);
const posts = (await getCollection('posts')).sort((a,b) => +new Date(b.data.date) - +new Date(a.data.date)).slice(0, 3);
const models = (await getCollection('models')).slice(0, 2);
---

<Layout>
	<main class="min-h-screen">
		<!-- Hero Section with Large Title and Background Gradient -->
		<section class="relative bg-base-900 text-white dark:bg-base-950 dark:text-white">
			<div class="absolute inset-0 z-0 opacity-30">
				<img src="/BonominiBlog/src/assets/images/hero-bg.svg" alt="Background image" class="w-full h-full object-cover" />
			</div>
			<div class="absolute inset-0 bg-gradient-to-b from-base-900/80 to-base-900/40 dark:from-base-950/90 dark:to-base-950/60 z-10"></div>
			
			<div class="relative z-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center py-24 lg:py-32">
				<div class="max-w-3xl mx-auto text-center space-y-8">
					<h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-white tracking-tight">
						Josh Bonomini
					</h1>
					<p class="text-xl text-base-200 max-w-4xl mx-auto leading-relaxed opacity-90">
						Welcome to my personal portfolio showcasing my passion for photography, 3D modeling,
						and various creative projects. Explore my work and join me on my creative journey.
					</p>
					
					<div class="flex flex-col sm:flex-row gap-4 justify-center pt-4">
						<a href="/BonominiBlog/gallery/" class="bg-accent-500 text-white px-8 py-4 font-semibold hover:bg-accent-600 transition-all duration-200 transform hover:scale-105 shadow-lg">
							Explore Gallery
						</a>
						<a href="/BonominiBlog/models/" class="border-2 border-white text-white px-8 py-4 font-semibold hover:bg-accent-500 hover:border-accent-500 transition-all duration-200">
							3D Models
						</a>
					</div>
				</div>
			</div>
		</section>
		
		<!-- Gallery Section -->
		<section class="py-20 bg-white dark:bg-base-800">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-12">
					<h2 class="text-4xl lg:text-5xl font-bold text-white mb-6">
						My Photography
					</h2>
					<p class="text-xl text-base-200 max-w-3xl mx-auto">
						Capturing moments in Nature, Landscapes, Macro, and Street Photography - a glimpse into my visual perspective
					</p>
				</div>
				
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					{galleryItems.length ? (
						galleryItems.map((g) => (
							<div class="group cursor-pointer">
								<div class="bg-base-100 dark:bg-base-700 overflow-hidden shadow-lg hover:shadow-hover transition-all duration-300 transform hover:-translate-y-2">
									<img src={g.data.thumbUrl ?? g.data.imageUrl} alt={g.data.alt || g.data.title} class="w-full aspect-[4/3] object-cover" loading="lazy" />
									<div class="p-6">
										<h3 class="text-xl font-semibold text-base-900 mb-2">{g.data.title}</h3>
										<a href="/BonominiBlog/gallery/" class="text-accent-600 font-medium hover:text-accent-700 transition-colors">
											View Collection ‚Üí
										</a>
									</div>
								</div>
							</div>
						))
					) : (
						<div class="text-base-600">No gallery items yet. Add some in src/content/gallery.</div>
					)}
				</div>
			</div>
		</section>
		
		<!-- Blog Posts Section -->
		<section class="py-20 bg-base-50 dark:bg-base-900">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-16">
					<h2 class="text-4xl lg:text-5xl font-bold text-base-900 dark:text-white mb-6">
						My Blog
					</h2>
					<p class="text-xl text-base-600 dark:text-base-300 max-w-3xl mx-auto">
						Thoughts, tutorials, and behind-the-scenes stories from my creative journey and hobby projects
					</p>
				</div>
				
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					{posts.length ? (
						posts.map((p) => (
							<article class="bg-white dark:bg-base-700 shadow-lg hover:shadow-hover transition-all duration-300">
								{p.data.coverImage ? (
									<img src={p.data.coverImage} alt={p.data.title} class="w-full aspect-[16/9] object-cover" loading="lazy" />
								) : (
									<div class="aspect-[16/9] bg-gradient-to-br from-base-200 to-base-300 dark:from-base-600 dark:to-base-700 flex items-center justify-center">
										<span class="text-4xl">üìù</span>
									</div>
								)}
								<div class="p-6">
									<p class="text-sm text-base-500">{new Date(p.data.date).toLocaleDateString()}</p>
									<h3 class="text-xl font-semibold text-base-900 dark:text-white mb-3">{p.data.title}</h3>
									{p.data.description && (
										<p class="text-base-600 dark:text-base-300 mb-4 line-clamp-3">{p.data.description}</p>
									)}
									<a href="#" class="text-accent-600 font-medium hover:text-accent-700 transition-colors">Read More ‚Üí</a>
								</div>
							</article>
						))
					) : (
						<div class="text-base-600">No posts yet. Add some in src/content/posts.</div>
					)}
				</div>
			</div>
		</section>
		
		<!-- 3D Models Section -->
		<section class="py-20 bg-white dark:bg-base-800">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-16">
					<h2 class="text-4xl lg:text-5xl font-bold text-base-900 dark:text-white mb-6">
						My 3D Models
					</h2>
					<p class="text-xl text-base-600 dark:text-base-300 max-w-3xl mx-auto">
						Personal 3D design projects and models I've created over the years - interactive and explorable
					</p>
				</div>
				
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
					{models.length ? (
						models.map((m) => (
							<div class="bg-base-100 dark:bg-base-700 p-8 shadow-lg">
								{m.data.posterUrl ? (
									<img src={m.data.posterUrl} alt={m.data.title} class="w-full aspect-[4/3] object-cover mb-6" loading="lazy" />
								) : (
									<div class="aspect-[4/3] bg-gradient-to-br from-accent-100 to-accent-200 dark:from-accent-800 dark:to-accent-600 flex items-center justify-center mb-6">
										<span class="text-8xl">üéØ</span>
									</div>
								)}
								<h3 class="text-2xl font-semibold text-base-900 dark:text-white mb-3">{m.data.title}</h3>
								{m.data.description && (<p class="text-base-600 dark:text-base-300 mb-4 leading-relaxed">{m.data.description}</p>)}
								<div class="flex items-center gap-4">
									<a href="/BonominiBlog/models/" class="bg-accent-500 text-white px-6 py-3 font-medium hover:bg-accent-600 transition-colors">View Model</a>
									<span class="text-sm text-base-500">{m.data.cameraControls ? 'Camera Controls' : ''}{m.data.ar ? ' ‚Ä¢ AR Ready' : ''}</span>
								</div>
							</div>
						))
					) : (
						<div class="text-base-600">No models yet. Add some in src/content/models.</div>
					)}
				</div>
			</div>
		</section>
		

	</main>
</Layout>
