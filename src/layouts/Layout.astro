---
import Navigation from '../components/Navigation.astro';
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const { 
	title = 'BonominiBlog',
	description = 'Explore our photo gallery and interactive 3D models. Built with Astro and deployed on GitHub Pages.'
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth selection:bg-accent-50 selection:text-accent-500 dark:selection:bg-accent-900 dark:selection:text-accent-300">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		
		<!-- Open Graph / Social Media Meta Tags -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:site_name" content="BonominiBlog" />
		
		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		
		<!-- Theme initialization to prevent flash of unstyled content -->
		<script is:inline>
			// Immediately restore dark mode preference on page load
			if (localStorage.getItem('theme') === 'dark' || 
				(!localStorage.getItem('theme') && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
				document.documentElement.classList.add('dark');
			} else {
				document.documentElement.classList.remove('dark');
			}
		</script>
	</head>
	<body class="bg-white dark:bg-base-900 flex flex-col min-h-screen text-base-900 dark:text-base-50 transition-colors duration-200">
		<Navigation />
		<main class="grow">
			<slot />
		</main>
		<footer class="bg-base-50 dark:bg-base-800 border-t border-base-100 dark:border-base-700 py-12 mt-16">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
					<div>
						<h3 class="font-bold text-base-900 dark:text-white text-lg mb-4">BonominiBlog</h3>
						<p class="text-base-600 dark:text-base-300 mb-4">Showcasing photography and 3D models with a modern Astro-powered site.</p>
						<p class="text-base-500 dark:text-base-400 text-sm">&copy; {new Date().getFullYear()} BonominiBlog</p>
					</div>
					
					<div>
						<h4 class="font-medium text-base-800 dark:text-base-100 mb-4">Quick Links</h4>
						<ul class="space-y-2">
							<li><a href="/" class="text-base-600 dark:text-base-300 hover:text-accent-600 dark:hover:text-accent-400 transition-colors">Home</a></li>
							<li><a href="/gallery" class="text-base-600 dark:text-base-300 hover:text-accent-600 dark:hover:text-accent-400 transition-colors">Gallery</a></li>
							<li><a href="/models" class="text-base-600 dark:text-base-300 hover:text-accent-600 dark:hover:text-accent-400 transition-colors">3D Models</a></li>
						</ul>
					</div>
					
					<div class="md:col-span-2">
						<h4 class="font-medium text-base-800 dark:text-base-100 mb-4">About</h4>
						<p class="text-base-600 dark:text-base-300">Built with Astro and the Trendspotter theme. Managed with PagesCMS and deployed via GitHub Pages.</p>
						<div class="flex items-center gap-4 mt-4">
							<a href="#" class="text-base-500 hover:text-accent-500 transition-colors">
