---
import Navigation from '../components/Navigation.astro';
import '../styles/global.css';
---

<!doctype html>
<html lang="en" class="scroll-smooth selection:bg-accent-50 selection:text-accent-500">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>BonominiBlog</title>
		<meta name="description" content="Explore our photo gallery and interactive 3D models. Built with Astro and deployed on GitHub Pages." />
	</head>
	<body class="bg-white flex flex-col min-h-screen">
		<Navigation />
		<main class="grow">
			<slot />
		</main>
		<footer class="bg-gray-50 border-t border-gray-200 py-8 mt-16">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center text-gray-600">
					<p>&copy; 2025 BonominiBlog. Built with Astro and Trendspotter theme.</p>
				</div>
			</div>
		</footer>
	</body>
</html>
